{
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox against localhost",
      "url": "http://localhost:1234",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "../*": "${webRoot}/*"
        }
      ]
    }
  ]
}
